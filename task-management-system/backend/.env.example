# Environment
ENVIRONMENT=development
DEBUG=true

# Secret Key (generate a new one for production)
SECRET_KEY=change-this-in-production-use-a-secure-key

# Database
DATABASE_URL=sqlite+aiosqlite:///./task_management.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/taskmanager

# Redis (optional)
# REDIS_URL=redis://localhost:6379/0

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
