#Peyman Miyandashti 250161
def create_person_report(name, *skills, **personal_info):
    """
    Creates a report for a person with their skills and personal information.
    *args captures skills (variable length)
    **kwargs captures personal information (key-value pairs)
    """
    report = f"Name: {name}\n"
    
    if skills:
        report += f"Skills: {', '.join(skills)}\n"
    
    if personal_info:
        report += "Additional Information:\n"
        for key, value in personal_info.items():
            report += f"  - {key}: {value}\n"
    
    return report

# Test with different data
person1 = create_person_report(
    "Peyman Miyandashti",
    "Python", "Data Analysis", "Machine Learning",
    age=25,
    student_id="250161",
    phone="686-509-0453"
)

person2 = create_person_report(
    "Alice Johnson",
    "JavaScript", "React",
    department="Engineering",
    years_experience=3
)

print(person1)
print("\n" + "="*50 + "\n")
print(person2)
