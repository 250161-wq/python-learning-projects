#Peyman Miyandashti 250161

# *args Example: Calculate average of multiple numbers
def calculate_average(*args):
    """
    Calculates the average of any number of input values.
    Uses *args to accept multiple positional arguments.
    """
    if len(args) == 0:
        return 0  # Avoid division by zero
    
    total = sum(args)
    average = total / len(args)
    return average

# Test with different numbers of arguments
print(f"Average of 5, 10, 15: {calculate_average(5, 10, 15)}")
print(f"Average of 2, 4, 6, 8, 10: {calculate_average(2, 4, 6, 8, 10)}")
print(f"Average of 100, 200: {calculate_average(100, 200)}")
print(f"Single number 42: {calculate_average(42)}")
print(f"No arguments: {calculate_average()}")
